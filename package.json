{
  "name": "content-fabric",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@9.15.0",
  "scripts": {
    "dev": "turbo dev",
    "dev:backend": "turbo dev --filter=@content-fabric/backend",
    "dev:frontend": "turbo dev --filter=@content-fabric/frontend",
    "build": "turbo build",
    "build:shared": "turbo build --filter=@content-fabric/shared",
    "lint": "turbo lint",
    "typecheck": "turbo typecheck",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "clean": "turbo clean && rm -rf node_modules"
  },
  "devDependencies": {
    "turbo": "^2.3.0",
    "typescript": "^5.3.3"
  }
}
