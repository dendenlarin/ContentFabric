# pnpm configuration for monorepo

# Автоматически устанавливать peer dependencies
auto-install-peers=true

# Не требовать строгих peer dependencies (некоторые пакеты имеют устаревшие peerDeps)
strict-peer-dependencies=false

# Если возникнут проблемы с phantom dependencies - раскомментировать:
# shamefully-hoist=true
